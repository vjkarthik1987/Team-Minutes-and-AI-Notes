<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/css/minimal.css">
  <title><%= title || 'My App' %></title>
</head>
<!-- layout.ejs BODY (replace your current topbar markup with this) -->
<body>
  <% const nav = typeof activeNav !== 'undefined' ? activeNav : ''; %>

  <div class="shell">
    <aside class="sidebar">
      <div>
        <div class="brand">Minutes</div>

        <% if (typeof org !== 'undefined' && org) { %>
          <div class="side-meta" style="margin-top:6px;">
            <div><strong><%= org.name %></strong></div>
            <% if (typeof user !== 'undefined' && user?.email) { %>
              <div><%= user.email %></div>
            <% } %>
          </div>
        <% } %>
      </div>

      <% if (typeof user !== 'undefined' && user) { %>
        <nav class="side-nav">
          <a href="/user/home" >ğŸ  Home</a>
          <a href="/user/calendar" >ğŸ“… Calendar</a>
        </nav>

        <div class="sidebar-footer">
          <form method="POST" action="/user/logout" style="margin:0;">
            <button class="btn" type="submit">Logout</button>
          </form>
        </div>
      <% } else { %>
        <div class="sidebar-footer">
          <a class="btn" href="/user/login">User login</a>
        </div>
      <% } %>
    </aside>

    <main class="main">
      <div class="container">
        <%- body %>
      </div>
    </main>
  </div>
</body>



</html>
